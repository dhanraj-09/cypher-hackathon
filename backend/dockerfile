FROM node:18

# Update system packages & install git
RUN apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y git \
    && apt-get clean

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .# Use Node.js 18
FROM node:18

# Install system deps
RUN apt-get update \
    && apt-get upgrade -y \
    && apt-get install -y git \
    && apt-get clean

WORKDIR /app

# Copy only package files first for caching
COPY package*.json ./

# Install deps (includes Prisma if in package.json)
RUN npm install

# Copy the Prisma schema separately (for cache efficiency)
COPY prisma ./prisma

# Generate Prisma client
RUN npx prisma generate

# Copy the rest of the code
COPY . .

# Build TypeScript
RUN npm run build

# Expose app port (change if needed)
EXPOSE 3002

# Start the app
CMD ["npm", "start"]


RUN npm run build
CMD ["npm", "start"]